<h1>Searching for recipe: <%= @search_term %> </h1>

<table border ="1">
	<tr>
		<td>thumbnail</td>
		<td>tittle</td>
		<td>social rank of the recipe</td>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr>
		<td><%= link_to image_tag(recipe["image_url"], height: '100', width: '100') , strip_tags(recipe["f2f_url"])%></td>
		<td><%= link_to strip_tags(recipe["title"]), strip_tags(recipe["f2f_url"]) %></td>
		<td><%= recipe["social_rank"] %></td>
	</tr>
	<% end %>
</table>


